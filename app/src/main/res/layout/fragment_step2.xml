<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="38dp"

    tools:context=".Step2Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/plus_jakarta_sans_extrabold"
            android:text="Do you have any \nChronics / Allergies ?"
            android:textColor="#242E49"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:src="@drawable/personalize2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/editTextCA"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/edittext_shadow"
            android:fontFamily="@font/plus_jakarta_sans_variablefont_wght"
            android:gravity="top"
            android:hint="Type here"
            android:paddingStart="20dp"
            android:paddingTop="16dp"
            android:textFontWeight="600"
            android:textColor="#424BFB"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            tools:layout_editor_absoluteX="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="226dp"
            android:backgroundTint="#424BFB"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:paddingBottom="12dp"
            android:text="Get Started"
            android:textFontWeight="800"
            android:textSize="18dp"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            tools:layout_editor_absoluteX="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>