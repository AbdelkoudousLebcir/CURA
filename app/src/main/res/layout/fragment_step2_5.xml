<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Step2_5Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/plus_jakarta_sans_extrabold"
            android:paddingHorizontal="24dp"
            android:text="Whatâ€™s your official blood type?"
            android:textColor="#242E49"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/plus_jakarta_sans_variablefont_wght"
            android:paddingVertical="14dp"
            android:text="A"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:background="@drawable/btn_grey2"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textViewB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/plus_jakarta_sans_variablefont_wght"
            android:paddingVertical="14dp"
            android:text="B"
            android:textAlignment="center"
            android:textColor="#5D6A85"
            android:textFontWeight="600"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toEndOf="@+id/textViewA"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/textViewAB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/plus_jakarta_sans_variablefont_wght"
            android:paddingVertical="14dp"
            android:text="AB"
            android:textAlignment="center"
            android:textColor="#5D6A85"
            android:textFontWeight="600"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/textViewO"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/plus_jakarta_sans_variablefont_wght"
            android:paddingVertical="14dp"
            android:text="O"
            android:textAlignment="center"
            android:textColor="#5D6A85"
            android:textFontWeight="600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/textViewLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-32dp"
            android:fontFamily="@font/plus_jakarta_sans_extrabold"
            android:text="A"
            android:textColor="#242E49"
            android:textSize="188dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewB"
            android:layout_marginStart="-80dp" />

        <TextView
            android:id="@+id/textViewPlusMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/plus_jakarta_sans_extrabold"
            android:text="+"
            android:textColor="#242E49"
            android:textSize="160dp"
            app:layout_constraintStart_toEndOf="@+id/textViewLarge"
            app:layout_constraintTop_toBottomOf="@+id/textViewA"
            android:layout_marginTop="-50dp"
            android:layout_marginStart="-20dp" />

        <ImageView
            android:id="@+id/imageViewPlus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/plus_minus_selected"
            android:paddingVertical="18dp"
            android:src="@drawable/plus_sign"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewLarge" />

        <ImageView
            android:id="@+id/imageViewMinus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/plus_minus_not_selected"
            android:paddingVertical="18dp"
            android:src="@drawable/minus_sign"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/textViewLarge" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="#424BFB"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:paddingBottom="12dp"
            android:text="Get Started"
            android:textFontWeight="800"
            android:textSize="18dp"
            app:cornerRadius="12dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewPlus"
            tools:layout_editor_absoluteX="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>